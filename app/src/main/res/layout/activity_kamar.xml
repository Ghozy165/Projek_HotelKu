<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".InformasiKamar">

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_back"
        android:onClick="kembaliKeHalamanUtama" />

    <TextView
        android:id="@+id/txt_informasikamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Informasi Kamar"
        android:textSize="20sp"
        android:layout_toEndOf="@id/btn_kembali"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_informasikamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/txt_informasikamar"/>

</RelativeLayout>