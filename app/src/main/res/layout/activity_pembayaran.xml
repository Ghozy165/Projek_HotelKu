<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <Button
            android:id="@+id/btn_kembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:onClick="kembaliKeHalamanPemesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Pemesanan Hotel"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_kembali"
            app:layout_constraintStart_toEndOf="@+id/btn_kembali"
            app:layout_constraintTop_toTopOf="@+id/btn_kembali" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pembayaran_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_kembali">

            <TextView
                android:id="@+id/pembayaran_idpemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/nama_hotel"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pembayaran_idpemesanan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/pembayaran_idpemesanan"
                android:text="Jenis Kamar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pemesanan_jumlahkasur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pemesanan_namahotel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="75dp"
                android:layout_toEndOf="@id/pemesanan_namahotel"
                android:text="Jumlah Kasur"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pemesanan_fasilitas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pemesanan_jumlahkasur"
                android:layout_marginStart="50dp"
                android:layout_marginTop="105dp"
                android:layout_toEndOf="@id/pemesanan_jumlahkasur"
                android:text="Fasilitas : "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pemesanan_fasilitas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pemesanan_fasilitas1"
                android:layout_marginStart="80dp"
                android:layout_marginTop="130dp"
                android:layout_toEndOf="@id/pemesanan_fasilitas1"
                android:text="Jenis Fasilitas"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>